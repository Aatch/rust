// Use one template module to specify in a single file the implementation
// of functions for multiple types

#[path = "module-polymorphism3-files"]
module mystd {

    // The template is specified in float-template.rs
    #[path = "float-template"]
    module float {
        // The type of the float
        import inst::T;

        // Define T as appropriate for platform
        #[path = "inst_float.rs"]
        module inst;
    }

    // Use the same template
    #[path = "float-template"]
    module f64 {

        import inst::T;

        // Define T as f64
        #[path = "inst_f64.rs"]
        module inst;
    }

    #[path = "float-template"]
    module f32 {
        import inst::T;

        #[path = "inst_f32.rs"]
        module inst;
    }

}